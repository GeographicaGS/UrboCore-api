{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended",
  "rules": {
    "eqeqeq": [2, "smart"],
    "indent": [2, 2],
    "no-constant-condition": 1,
    "no-irregular-whitespace": 1,
    "keyword-spacing": 2,
    "no-redeclare": 1,
    "no-unused-vars": 1,
    "no-underscore-dangle": 1,
    "no-use-before-define": [0,"nofunc"],
    "quotes": [2, "single"],
    "space-before-blocks": 2,
    "strict": 2
  }
}
